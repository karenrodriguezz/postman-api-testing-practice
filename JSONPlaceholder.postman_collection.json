      "name": "POST",
      "item": [
        {
          "name": "POST Create New Post",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "",
                  "// 1. Validamos el status 201 y que el ID sea 101 (el que genera la API)",
                  "pm.test(\"Status es 201 y el ID es 101\", function () {",
                  "    pm.response.to.have.status(201);",
                  "    ",
                  "    // Cambiamos 1 por 101",
                  "    pm.expect(jsonData.id).to.eql(101);",
                  "});",
                  "",
                  "// 2. O MEJOR AÚN: Un test de QA más robusto",
                  "// Validamos que el ID sea simplemente UN NÚMERO (así no importa si es 101, 102, etc.)",
                  "pm.test(\"El ID generado es un número válido\", function () {",
                  "    pm.expect(jsonData.id).to.be.a('number');",
                  "});",
                  "",
                  "pm.test(\"El título es el que nosotros enviamos\", function () {",
                  "    pm.expect(jsonData.title).to.eql(\"ejemplos en post\");",
                  "});"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"ejemplos en post\",\n  \"body\": \"Esto es una prueba en Postman\",\n  \"userId\": 1\n}",
